<!DOCTYPE html>
<html>
<head>

    @* Adjust the viewport width as per device width for mobile *@
    <meta name=”viewport” content=”width =device-width, initial-scale=1.0” />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OinkCash </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body onload="principioIndex();">


    <div class="navbar navbar-inverse navbar-fixed-top">

        <img src="~/images/OinkCash.ico" style="width:60px; height:50px; float:left;" />

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OinkCash", "Index", "Perfil", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--
                        <li>@Html.ActionLink("Inicio", "Index", "Perfil")</li>

                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    -->
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>

        <div id="ver_on1">
            <h1 id="titu"><button type="submit" href="#" onclick="mostrar1('bloque1')" class="btn btn-default" aria-label="Justify"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></button></h1>
        </div>
        <div id="ver_off1" style="display: none">
            <h1><button type="submit" href="#" onclick="ocultar1('bloque1')" class="btn btn-default" aria-label="Justify"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></button></h1>
        </div>


        <div id="bloque1" style="display: none">

            <div id="MenuLateral" class="col-lg-3;" style="float:left; height:100	%; width:8%;  ">
                <!--ACA IRIA TOODO LO QUE SE TIENE QUE OCULTAR-->
                <!--id="nav-drawer" data-region="drawer" class="hidden-print moodle-has-zindex" aria-hidden="false" tabindex="-1"-->

                <ul class="list-group">

                    <lu class="list-group-item">@Html.ActionLink("Inicio", "Index", "Perfil")</lu>
                    <lu class="list-group-item">@Html.ActionLink("Gestor de cuentas", "GestorDeCuentas", "Perfil")</lu>
                    <!--<lu class="list-group-item">@Html.ActionLink("Limites para las cuentas", "Index", "Perfil")</lu>-->
                    <lu class="list-group-item">@Html.ActionLink("Gestor de gastos", "GestorDeGastos", "Perfil")</lu>
                    <lu class="list-group-item">@Html.ActionLink("Reportes", "Reportes", "Perfil")</lu>
                </ul>
            </div>
        </div>
    </div>

    </div>


    <div class="container body-content">


        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - OinkCash </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="~/Scripts/dev.js"></script>
<script type="text/javascript" src="~/Scripts/Menu.js"></script>
<script type="text/javascript" src="~/Scripts/Graficos.js"></script>